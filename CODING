package QUIZ;
import java.util.Scanner;
import java.util.ArrayList;
public class LABTEST1 {

	public LABTEST1() {
		// TODO Auto-generated constructor stub
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System. in );
		{
			System.out.println("Enter the number of the words");
		    int x = sc.nextInt();

		    System.out.println("Enter " + x + " words:");
		    ArrayList<String> name = new ArrayList<>();
		    for(int i = 0; i < x; i++) {
		        name.add(sc.next());
		    }


		    ArrayList<String> name1 = repeat(name);
		    for (String word: name1) {
		        int a = count(name, word);
		        System.out.println(word + ": " + a);
		    }}
		}

		public static int count(ArrayList<String> numbers, String word) {
		    int i1 = 0;
		    for (String a: numbers) {
		        if (a.equals(word)) {
		            i1++;
		        }
		    }
		    return i1;
		}

		public static ArrayList<String> repeat(ArrayList<String> uti) {
		    ArrayList<String> comeback = new ArrayList<>();
		    for(String s: uti) {
		        if (! comeback.contains(s)) {
		        	comeback.add(s);
		        }
		    }
		    return comeback;
		}
		}
